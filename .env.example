# Server Configuration
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/anky

# API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# IPFS/Pinata (Optional - for minting functionality)
PINATA_JWT=your_pinata_jwt_here
# OR use API key/secret instead:
# PINATA_API_KEY=your_pinata_api_key_here
# PINATA_API_SECRET=your_pinata_api_secret_here

# Pinata Gateway (Optional)
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs

# Privy Authentication (Required for protected endpoints)
# Get these from https://dashboard.privy.io/
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Frontend URL (for CORS in production)
FRONTEND_URL=https://your-frontend-domain.com
